---
import ProductCard from './ProductCard.astro';
import ProductsWithSkeleton from './ProductsWithSkeleton.jsx';

interface Props {
  products: import('../data/products').Product[];
}

const { products = [] } = Astro.props;
---

<ProductsWithSkeleton client:visible>
  {products.map((product) => (
    <ProductCard
  name={product.name}
  slug={product.slug}
  images={product.images}
  price={product.price}
  type={product.type || ''}
  discount={product.discount || false}
  sizes={product.sizes || ['S', 'M', 'L']}
/>
  ))}
</ProductsWithSkeleton>