---

import IconType from './IconType.astro';
import EmblaIsla from './Carousel/EmblaIsla.astro';



interface Props {
  name: string;
  slug: string;
  images: string[]; // Cambiado de 'image' a 'images'
  price?: number;
  type: string
  discount: boolean

}

const { name, slug, images, price = 0, type, discount } = Astro.props as Props;
