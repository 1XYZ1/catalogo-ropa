---


interface Props {
  name: string;
  slug: string;
  images: string[]; // Cambiado de 'image' a 'images'
  price?: number;

  gender?: 'male' | 'female' | 'unisex';
}

const { name, slug, images, price = 0, gender } = Astro.props as Props;
const image = images[0]
---




<div class="flex flex-col border rounded-xl overflow-hidden shadow-md hover:shadow-lg transition-shadow duration-300 h-full" id={slug}>
  <!-- Imagen del producto -->
  <a href={`/producto/${slug}`} class="flex-1">
    <picture>
      <img
        loading="lazy"
        width="400"
        height="400"
        src={image}
        alt={name}
        class="w-full h-full object-cover opacity-0 hover:scale-105 scale-105 transition-all duration-300"
        onload="this.classList.add('opacity-100'); this.classList.remove('scale-105') "
      />
    </picture>
  </a>

  <!-- Información del producto -->
  <div class="p-4 flex flex-col flex-1">
    <h3 class="text-xl font-bold text-center mb-2">{name}</h3>
    <p class="text-sm text-gray-500 text-center mb-4">${price.toLocaleString('es-ES')}</p>

    <!-- Botón -->
    <div class="mt-auto flex justify-center">
      <a href={`/producto/${slug}`} class="group relative inline-block">
        <button class="relative w-64 bg-black text-white py-3 px-6 rounded-lg overflow-hidden transition-all duration-300 group-hover:scale-105">
          <span class="absolute inset-0 w-full h-full bg-gradient-to-r from-green-800 via-gray-500 to-black opacity-0 group-hover:opacity-30 transition-opacity duration-500"></span>
          <span class="relative z-10 text-sm font-medium tracking-widest">
            Ver Detalles
          </span>
          <!-- Efecto de borde animado -->
          <span class="absolute -inset-0.5 border-2 border-transparent rounded-lg group-hover:border-gray-600 transition-all duration-300"></span>
        </button>
      </a>
    </div>
  </div>
</div>
