---
interface Props {
  name: string;
  slug: string;
  image: string;
  price: number;
}

const { name, slug, image, price } = Astro.props as Props;
---
<div class="border rounded-lg overflow-hidden shadow hover:shadow-lg transition">
  <a href={`/producto/${slug}`}>
    <img src={image} alt={name} class="w-full h-48 object-cover" />
    <div class="p-4">
      <h3 class="text-xl font-semibold mb-2">{name}</h3>
      <p class="text-lg text-gray-700">{price.toFixed(2)} â‚¬</p>
    </div>
  </a>
</div>
