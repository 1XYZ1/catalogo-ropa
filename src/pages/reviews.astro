---
// src/pages/reviews.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import { reviews } from '../data/reviews';
import ReviewsComponent from '../components/Reviews.jsx';
---

<BaseLayout title="Reseñas de Clientes" description="Comentarios y opiniones de nuestros clientes.">
  <h2 class="text-3xl font-bold text-center my-8">Reseñas de Clientes</h2>

  <div class="max-w-4xl mx-auto px-4">
    <ReviewsComponent client:visible reviews={reviews} />
  </div>
</BaseLayout>