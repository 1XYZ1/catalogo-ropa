---
// src/pages/reviews.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import { reviews } from '../data/reviews';
---

<BaseLayout title="Reseñas de Clientes" description="Comentarios y opiniones de nuestros clientes.">
  <h2 class="text-2xl md:text-3xl font-bold text-center my-8">Reseñas de Clientes</h2>
  <div class="max-w-4xl mx-auto px-4">
    {reviews.map((review) => (
      <div class="mb-8 border-b pb-6 flex flex-col md:flex-row items-center md:items-start">
        {/* Imagen del producto vendido */}
        <div class="md:w-1/3 mb-4 md:mb-0">
          <img
            src={review.productImage}
            alt={`Producto comprado por ${review.name}`}
            class="w-full h-full md:h-full object-cover rounded shadow-md"
            loading="lazy"
          />
        </div>
        {/* Contenido de la reseña */}
        <div class="md:w-2/3 md:pl-6">
          <div class="flex items-center mb-2">
            <h3 class="text-xl font-semibold">{review.name}</h3>
            <span class="ml-auto text-sm text-gray-500">
              {new Date(review.date).toLocaleDateString('es-ES', {
                day: 'numeric',
                month: 'long',
                year: 'numeric',
              })}
            </span>
          </div>

          {/* Comentario con formato destacado */}
          <div class="bg-gray-100 p-4 rounded">
            <p class="text-gray-800 text-lg italic font-medium">&ldquo;{review.comment}&rdquo;</p>
          </div>
        </div>
      </div>
    ))}
  </div>
</BaseLayout>
