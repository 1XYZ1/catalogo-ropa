---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProductGrid from '../components/ProductGrid.astro';
import { products } from '../data/products';

// Filtrar productos femeninos y unisex
const filteredProducts = products.filter(p => p.gender === 'female' || p.gender === 'unisex');

---
<BaseLayout title="Catálogo de Ropa - Mujer">
  <h2 class="text-3xl font-bold text-center my-8">Catálogo - Mujer</h2>

  <!-- Controles de Filtrado -->
  <div class="flex justify-center space-x-4 mb-8">
    <a href="/" class="px-4 py-2 rounded font-semibold bg-gray-200 text-gray-800 hover:bg-blue-100">Todos</a>
    <a href="/hombre" class="px-4 py-2 rounded font-semibold bg-gray-200 text-gray-800 hover:bg-blue-100">Hombre</a>
    <a href="/mujer" class="px-4 py-2 rounded font-semibold bg-blue-600 text-white hover:bg-blue-700">Mujer</a>
  </div>

  <!-- Lista de Productos Filtrados -->
  <ProductGrid products={filteredProducts} />
</BaseLayout>
