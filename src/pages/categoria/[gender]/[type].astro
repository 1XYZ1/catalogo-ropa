  <h2 class="text-3xl font-bold text-center my-8">{`${type.charAt(0).toUpperCase() + type.slice(1)} ${gender.charAt(0).toUpperCase() + gender.slice(1)}`}</h2>

  <FilterControls baseRoute={`categoria/${gender}`} />

  <!-- Lista de Productos Filtrados -->
  <ProductGrid products={filteredProducts} />
</BaseLayout>