---
/* src/components/FAQContainer.astro */

// Importamos las categorías desde el archivo faqs.ts
import { faqCategories } from '../data/faqs';
import BaseLayout from '../layouts/BaseLayout.astro';

const { title = "Preguntas Frecuentes", description = "Encuentra respuestas a las dudas más comunes" } = Astro.props;
---

<BaseLayout title={title} description={description}>

  <main class="max-w-3xl mx-auto px-4 my-8">
    <section class="mb-8">
      <h1 class="text-2xl md:text-3xl font-bold text-center">{title}</h1>
      <p class="text-center text-gray-600 mt-2">{description}</p>
    </section>

    <!-- Iteramos sobre cada categoría -->
    <section class="space-y-6">
      {faqCategories.map((category) => (
        <details
          class="bg-white rounded-lg shadow-sm p-4 transition-colors hover:bg-gray-50"
          :key={category.title}
        >
          <summary class="text-lg font-semibold cursor-pointer outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-white">
            {category.title}
          </summary>
          <div class="mt-4 space-y-4">
            {category.faqs.map((faq, index) => (
              <div :key={`${category.title}-${index}`}>
                <h3 class="text-base font-semibold mb-1">{faq.question}</h3>
                <p class="text-gray-700 leading-relaxed">{faq.answer}</p>
              </div>
            ))}
          </div>
        </details>
      ))}
    </section>
  </main>
</BaseLayout>
