---
import { ViewTransitions } from 'astro:transitions';
import Navbar from '../components/Navbar';
import '../styles/global.css'; // CSS global
import { siteInfo } from '../constantes/site-info';
import  SpeedInsights  from "@vercel/speed-insights/astro"
// Definimos la interfaz de las props del layout
interface Props {
  title?: string;
  description?: string;
  lang?: string;
  ogimage?: string;
  keywords?: string;
  type?: 'website' | 'article' | 'product';
  children?: any; // Añadimos children a la interfaz
}

// Extraemos las props y establecemos valores por defecto
const {
  title = siteInfo.title,
  description = siteInfo.shortDescription,
  lang = 'es',
  keywords = siteInfo.keywords,
  ogimage = siteInfo.image,
  type = 'website'
} = Astro.props as Props;

const absoluteOgImage = ogimage?.startsWith('http')
  ? ogimage
  : `${Astro.site}${ogimage?.startsWith('/') ? ogimage.slice(1) : ogimage}`;
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <!-- ViewTransitions debe ir primero para optimizar el rendimiento -->
    <ViewTransitions


    />


    <title>{title}</title>

    <link
      rel="preload"
      href={ogimage}
      as="image"
      type="image/webp"
    />

    <!-- Meta tags básicos -->
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />

    <!-- OpenGraph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={absoluteOgImage} />
    <meta property="og:type" content={type} />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:site_name" content={siteInfo.title} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={absoluteOgImage} />

    <!-- Product meta si aplica -->
    {type === 'product' && (
      <meta property="product:availability" content="in stock" />
    )}
  </head>
  <body class="font-sans bg-gray-100 flex flex-col min-h-screen relative">


    <!-- Cabecera del sitio -->



        <Navbar client:idle />
        <div class="h-8"></div>




    <!-- Contenido de la página -->
    <main class="container mx-auto px-2 sm:px-4 py-6 flex-1">
      <slot />

    </main>

    <!-- Pie de página -->
    <footer class="bg-white shadow mt-8">
      <div class="container mx-auto px-4 py-4 text-center">
        <p>&copy; 2024 Shark Import.</p>
      </div>
    </footer>


    <SpeedInsights />
  </body>
</html>

<style is:global>
  /* Aseguramos que todos los z-index funcionen correctamente */
  * {
    isolation: auto;
  }

  /* Cuando el menú está abierto */
  html.menu-open {
    overflow: hidden;
  }
</style>
